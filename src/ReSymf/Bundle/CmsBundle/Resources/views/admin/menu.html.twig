<nav class="navbar navbar-inverse" role="navigation">
	<!-- Brand and toggle get grouped for better mobile display -->
	<div class="navbar-header">
		<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</button>
		<a class="navbar-brand" href="{{ path('resymf_admin_dashboard') }}"><i class="fa fa-home fa-lg"></i> {{ site_config.name }}</a>
	</div>

	<!-- Collect the nav links, forms, and other content for toggling -->
	<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		<ul class="nav navbar-nav">
			{% for element in menu %}
				{% if element.type == 'crud' %}
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-{{ element.icon }} fa-lg"></i> {{ element.label }} <b class="caret"></b></a>
						<ul class="dropdown-menu">
							{% if element.actions %}
								{% for action in element.actions if action=='list' %}
									<li>
										{% set path = element.object_prefix ~ '_' ~ action %}
										<a href="{{ path( path, { 'type': element.class }  ) }}"><i class="fa fa-list fa-lg"></i> {{ action }}</a>
									</li>
								{% endfor %}
								{% for action in element.actions if action=='create' %}
									<li>
										{% set path = element.object_prefix ~ '_' ~ action %}
										<a href="{{ path( path, { 'type': element.class }  ) }}"><i class="fa fa-edit fa-lg"></i> {{ action }}</a>
									</li>
								{% endfor %}
							{% endif %}
						</ul>
					</li>
				{% elseif element.type == 'page' %}
					<li>
						<a href="{{ path('resymf_admin_custom_page', {'slug': element.slug}) }}"><i class="fa fa-{{ element.icon }} fa-lg"></i> {{ element.label }}</a>
					</li>
				{% endif %}
			{% endfor %}


		</ul>
		<ul class="nav navbar-nav navbar-right">
			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-cog fa-lg"></i>  {{ app.user.username }} <b class="caret"></b></a>
				<ul class="dropdown-menu">
					<li> <a href="# }}"><i class="fa fa-cogs fa-lg"></i> Settings</a></li>
					<li> <a href="{{ path('resymf_admin_profile_show') }}"><i class="fa fa-user fa-lg"></i> Show Profile</a></li>
					<li class="divider"></li>
					<li><a href="#"><i class="fa fa-sign-out fa-lg"></i> Logout</a></li>
				</ul>
			</li>
		</ul>

	</div>
	<!-- /.navbar-collapse -->
</nav>