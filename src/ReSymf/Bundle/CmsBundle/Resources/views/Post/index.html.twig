{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Post list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Createdate</th>
            <th>Name</th>
            <th>Content</th>
            <th>Authorid</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('object_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.createDate %}{{ entity.createDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.authorId }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('object_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('object_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('object_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
