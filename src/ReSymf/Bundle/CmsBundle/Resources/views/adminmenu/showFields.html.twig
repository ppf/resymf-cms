{% if fields %}
    {% for field in fields %}

        {% if edit_object is defined and attribute(edit_object,field.name) is defined %}
            {% set value = attribute(edit_object,field.name) %}
        {% else %}
            {% set value = '' %}
        {% endif %}

        {% if (field.type=='text' or field.type=='date') %}
            <div class="form-group">
                <label for="" class="col-lg-2 control-label">
                    {% if field.fieldLabel %}
                        {{ field.fieldLabel }}
                    {% else %}
                        {{ field.name }}
                    {% endif %}
                    :</label>

                <div class="col-lg-9">
                    <span class="" name="{{ field.name }}">{{ value }}</span>
                </div>
            </div>
        {% endif %}
        {% if field.type=='editor' %}
            <div class="form-group">
                <label for="" class="col-lg-2 control-label">
                    {% if field.fieldLabel %}
                        {{ field.fieldLabel }}
                    {% else %}
                        {{ field.name }}
                    {% endif %}
                    :</label>

                <div class="col-lg-9">
                    <span class="" name="{{ field.name }}"
                          value=""> {{ value | raw }}</span>
                </div>
            </div>
        {% endif %}
        {% if field.type == 'relation' %}
            {% if (field.relationType == 'manyToOne') or (field.relationType == 'oneToOne') %}
                <div class="form-group">
                    <label for="" class="col-lg-2 control-label">
                        {% if field.fieldLabel %}
                            {{ field.fieldLabel }}
                        {% else %}
                            {{ field.name }}
                        {% endif %}
                        :</label>

                    <div class="col-lg-9">

                        {% if multi_select[field.name]['selected'] is  defined %}
                            {% for type, option in multi_select[field.name]['selected'] %}
                                <span data-id="{{ option.id }}">{{ option.name }}</span> <a class="see-link"
                                                                                            href="{{ path('object_show', {'type' : type, 'id' : option.id}) }}">Zobacz</a>
                            {% endfor %}
                        {% endif %}

                        {#<option value="tomatoes">Tomatoes</option>#}
                        {#<option value="mozarella">Mozzarella</option>#}
                        {#<option value="mushrooms">Mushrooms</option>#}
                        {#<option value="pepperoni">Pepperoni</option>#}
                        {#<option value="onions">Onions</option>#}
                        </select>
                    </div>
                </div>
            {% endif %}
        {% endif %}
    {% endfor %}
{% endif %}
