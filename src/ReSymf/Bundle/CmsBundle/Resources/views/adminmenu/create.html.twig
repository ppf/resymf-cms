{% extends 'ReSymfCmsBundle:adminmenu:baseAdmin.html.twig' %}

{% block content %}
    {% if form_config is defined %}
        <div class="col-lg-8 col-md-8 col-sm-12 ">
            <div class="well">
                <form action="" method="POST" class="bs-example form-horizontal">
                    <fieldset>
                        <div class="form-group">
                            <div class="col-lg-11">
                                <legend>Edit Object:</legend>
                            </div>
                        </div>
                        {% if form_config.fields %}
                            {% for field in form_config.fields %}
                                {% if field.type=='text' %}
                                    <div class="form-group">
                                        <label for="" class="col-lg-2 control-label">
                                            {% if field.fieldLabel %}
                                                {{ field.fieldLabel }}
                                            {% else %}
                                                {{ field.name }}
                                            {% endif %}
                                            :</label>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" name="{{ field.name }}" value=""/>
                                        </div>
                                    </div>
                                {% endif %}
                                {% if field.type=='editor' %}
                                    <div class="form-group">
                                        <label for="" class="col-lg-2 control-label">
                                            {% if field.fieldLabel %}
                                                {{ field.fieldLabel }}
                                            {% else %}
                                                {{ field.name }}
                                            {% endif %}
                                            :</label>
                                        <div class="col-lg-9">
                                            <textarea class="form-control" name="{{ field.name }}" value=""> </textarea>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                        <div class="form-group">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <input type="submit" class="btn btn-primary" value="{{ 'object.save'|trans }}"/>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    {% endif %}
{% endblock %}