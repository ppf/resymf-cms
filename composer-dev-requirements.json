{
    "require-dev": {
        "phpunit/phpunit": "^4.8|^5.7|^6.5|^7.5",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-symfony": "^1.3",
        "phpstan/phpstan-doctrine": "^1.3",
        "friendsofphp/php-cs-fixer": "^3.0",
        "vimeo/psalm": "^5.0",
        "psalm/plugin-symfony": "^5.0",
        "phploc/phploc": "^7.0",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/var-dumper": "^2.4|^3.0|^4.0|^5.0",
        "symfony/phpunit-bridge": "^2.7|^3.0|^4.0|^5.0"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html build/coverage --coverage-clover build/logs/clover.xml",
        "phpstan": "phpstan analyse --memory-limit=1G",
        "psalm": "psalm --show-info=true",
        "cs-check": "php-cs-fixer fix --dry-run --diff --verbose",
        "cs-fix": "php-cs-fixer fix --verbose",
        "phploc": "phploc src --log-json=build/phploc.json",
        "quality-check": [
            "@phpstan",
            "@cs-check",
            "@test"
        ],
        "quality-fix": [
            "@cs-fix",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "platform-check": false
    }
}
