{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}


	<div class="col-lg-4 col-md-4 col-sm-6 form_container">
		<div class="well">
			{% if error %}
				<div>{{ error|trans }}</div>
			{% endif %}
			<form action="{{ path("fos_user_security_check") }}" method="post" class="bs-example form-horizontal">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
				<fieldset>
					<div class="form-group">
					<div class="col-lg-11">
					<legend>{{ 'security.login.message'|trans}}</legend>
					<p>{{ 'login.info'|trans }}</p>
</div>
					</div>
					<div class="form-group">
						<label for="inputEmail"
						       class="col-lg-3 control-label">{{ 'security.login.username'|trans }}</label>

						<div class="col-lg-8">
							<input type="text" class="form-control" id="username" name="_username"
							       placeholder="{{ 'security.login.username'|trans }}"
							       value="{{ last_username }}" required="required"/>
						</div>
					</div>
					<div class="form-group">
						<label for="inputEmail"
						       class="col-lg-3 control-label">{{ 'security.login.password'|trans }}</label>

						<div class="col-lg-8">
							<input type="password" class="form-control" id="password" name="_password"
							       placeholder="{{ 'security.login.password'|trans }}"
							       required="required"/>
						</div>
					</div>
					<div class="form-group">
						<div class="col-lg-8">
							<div class="checkbox">
								<label>
									<input type="checkbox" id="remember_me" name="_remember_me"
									       value="on"/> {{ 'security.login.remember_me'|trans }}
								</label>
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="col-lg-11 col-md-12 col-sm-12">

							<input class="btn btn-primary" type="submit" id="_submit" name="_submit"
							       value="{{ 'security.login.submit'|trans }}"/>
						</div>
					</div>
				</fieldset>
			</form>

		</div>
	</div>
{% endblock fos_user_content %}
